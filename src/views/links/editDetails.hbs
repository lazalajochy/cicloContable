<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2>Actualizar los datos de detalles</h2>
            <div class="card">
                <div class="card-body">
                    <form action="/links/editDetails/{{details.id}}" method="POST">
                        <div class="form-group">
                            <label for="socio">Detalle</label>
                            <input type="text" value="{{details.socio}}"  name="socio"  class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="sub_auxiliar">Sub-Auxiliar</label>
                            <input type="text" value="{{details.sub_auxiliar}}"  name="sub_auxiliar" class="form-control" id="sub_auxiliar">
                        </div>
                        <div class="form-group">
                            <label for="auxiliar">Auxiliar</label>
                            <input type="text" value="{{details.auxiliar}}" name="auxiliar" class="form-control" id="auxiliar">
                        </div>
                        <div class="form-group">
                            <label for="debito">Debito</label>
                            <input type="text" value="{{details.debito}}" name="debito" class="form-control" id="debito">
                        </div>
                        <div class="form-group">
                            <label for="credito">Credito</label>
                            <input type="text" value="{{details.credito}}" name="credito" class="form-control" id="credito">
                        </div>
                        <div class="form-group">
                            <label for="balance">Balance</label>
                            <input type="text" class="form-control" name="balance" value="{{details.balance}}" readonly>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" row="2" class="form-control">{{details.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    setInterval(function(){
        var sub_auxiliar =  parseFloat(document.getElementById("sub_auxiliar").value);
        var auxiliar = parseFloat(document.getElementById("auxiliar").value);
        var debito =  parseFloat(document.getElementById("debito").value);
        var credito =  parseFloat(document.getElementById("credito").value);  
        parseFloat(document.getElementById('balance').value = debito - credito)      
    },1000)
</script>