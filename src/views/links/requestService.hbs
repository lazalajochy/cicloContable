<div class="container pt-5">
   <div class="row">
      <div class="col-md-4">
         <div class="panel panel-default">
            <div class="panel-heading">
               <h2 class="panel-title">Solicitar Servicio</h2>
            </div>
         </div>
         <div class="panel-body">
            <form action="/links/requestService" method="POST" class="form-horizontal">
               <div class="form-group">
                  <input type="text" class="form-control" name="customerName" placeholder="User name" autofocus required>
               </div>
               <div class="form-group">
                  <select class="form-control" name="serviceName">
                     <option value="corte de pelo">Corte de pelo</option>
                     <option value="corte de pelo y barba">Corte de pelo y barba</option>
                     <option value="blow out">Blow out</option>
                     <option value="blow out con barba">Blow out con barba</option>
                     <option value="cerquillo">Cerqueillo</option>
                     <option value="cejas">Cejas</option>
                  </select>
               </div>
               <div class="form-group">
                  <textarea name="description" rows="2" class="form-control" required placeholder="Description"></textarea>
               </div>
               <div class="form-group">
                  <button class="btn btn-success btn-block" id="button">Save</button>
               </div>
            </form>
         </div>
      </div>
      <div class="col-md-8">
         <div class="container">
            <div class="panel panel-default">
               <div class="panel-heading">
                  <h2 class="panel-title">Lista de clientes</h2>
               </div>
            </div>
			{{#if user}}
				 <table class="table table-striped">
				 <thead>
					 <tr>
						 <th>Turno</th>
						 <th>Nombre</th>
                   <th>Servicio</th>
						 <th>Descripcion</th>
                   <th>Accion</th>
					 </tr>
				 </thead>
				 <tbody>
					 {{#each customer }}
					 	<tr>
							 <td>{{id}}</td>
							 <td>{{ customerName }}</td>
                      <td>{{serviceName}}</td>
							 <td>{{ description }}</td>
							 <td>
								<a href="/links/delete/{{id}}" class="btn btn-danger" >Eliminar</a>
							</td>
						 </tr>
						 {{else}}
                            <tr>
                                <p>No hay clientes en espera!</p>                              
                            </tr>
					 {{/each}}
				 </tbody>
			 </table>

			{{else}}

			 <table class="table table-striped">
				 <thead>
					 <tr>
						 <th>Turno</th>
                   <th>Nombre</th>
						 <th>Servicio</th>
						 <th>Descripcion</th>
					 </tr>
				 </thead>
				 <tbody>
					 {{#each customer}}
					 	<tr>
							 <td>{{id}}</td>
							 <td>{{ customerName }}</td>
                      <td>{{serviceName}}</td>
							 <td>{{ description }}</td>
						 </tr>
						 {{else}}
                            <tr>
                                <p>No hay clientes en espera!</p>                              
                            </tr>
					 {{/each}}
				 </tbody>
			 </table>


			{{/if}}
         </div>
      </div>
   </div>
</div>


<script>
   function timeOff(){
      var day = new Date();
      var button = document.getElementById("button");

      if(day.getDay() == 2){
         button.disabled = true;
      }else if(day.getDay !== 2 && day.getHours() >= 7 && day.getHours() < 11){
         button.disabled = false;
      }else if(day.getDay !== 2 && day.getHours() >= 11 && day.getHours < 13){
         button.disabled = true;
      }else if(day.getDay !== 2 && day.getHours() >= 13 && day.getHours() < 20){
         button.disabled == false;
      }else if(day.getDay !== 2 && day.getHours() >= 20){
         button.disabled = true;
      }else if(day.getDay !== 2 && day.getHours() >= 0 && day.getHours() <= 7){
		  button.disabled  = true
	  }

      console.log(day.getHours())

   }

   timeOff();
</script>