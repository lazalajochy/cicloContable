<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <h2>Operaciones de Balanza</h2>
            <div class="card">
                <div class="card-body">
                    <form action="/links/balanza" method="post">
                        <div class="form-group">
                            <input type="text" name="detalleNombre" class="form-control" required placeholder="nombre transacion">
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombreUno" class="form-control" placeholder="nombre transacion" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="transacionUno" class="form-control" required placeholder="tipo de transacion">
                        </div>
                        <div class="form-group">
                            <input type="text" name="transacionDos" class="form-control" required placeholder="tipo de transacion">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidadUno" class="form-control" required placeholder="cantidad" id="cantidadUno">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidadDos" class="form-control" required placeholder="cantidad" id="cantidadDos">
                        </div>
                        <div class="form-group">
                            <input type="text" name="result" class="form-control" required readonly id="result">
                        </div>
                        <div class="form-group">
                            <select id="option" class="form-control">
                                <option value="sumar">Sumar</option>
                                <option value="restar">Restar</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{idCuentas}}" style="display: none;" name="idCuentas">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    setInterval(function(){
        var option = document.getElementById("option").value;
        var cantidadUno = parseFloat(document.getElementById("cantidadUno").value);
        var cantidadDos = parseFloat(document.getElementById("cantidadDos").value);
        if(option == "sumar"){
            document.getElementById("result").value = cantidadUno + cantidadDos;
        }else if(option == "restar"){
            document.getElementById("result").value = cantidadUno - cantidadDos;
        }

    }, 1000)
</script>
