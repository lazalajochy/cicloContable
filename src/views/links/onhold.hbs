<div class="container pt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="title">Servicios disponibles</h2>
                </div>
            </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Servicio</th>
                            <th>Precio</th>
                            <th>Descripcion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each service}}
                            <tr>
                                <td>{{ serviceName}}</td>
                                <td>{{price}}</td>
                                <td>{{description}}</td>
                            </tr>
                        {{else}}
                            <tr>
                                <p>No hay servicios agregado!</p>                              
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
        </div>
    </div>
</div>
